import { Image } from "astro:assets";

import TabNav from "../../ui/blocks/TabNav.astro";
import TabContent from "../../ui/blocks/TabContent.astro";
import construction from "../../../images/construction-image.avif";
import saniket_house_logo from "../../../images/saniket-house-w-logo.jpg";
import saniket_logo from "../../../images/saniket-logo.svg";
import technical_logo from "../../../images/technical-logo.svg";
import technical_office from "../../../images/technical-office.jpg";
import champ_logo from "../../../images/champ-logo.svg";
import champ_event from "../../../images/champ-event.jpg";
import loha_photo from "../../../images/loha-photo.jpg";
